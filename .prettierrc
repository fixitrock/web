{
    "$schema": "https://json.schemastore.org/prettierrc.json",
    "semi": false,
    "trailingComma": "es5",
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 100,
    "jsxSingleQuote": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "endOfLine": "auto",
    "arrowParens": "always",
    "plugins": ["prettier-plugin-tailwindcss"],
    "tailwindFunctions": ["clsx", "cn", "tw"],
    "tailwindAttributes": [
        "className",
        "classNames",
        "base",
        "innerwrapper",
        "wrapper",
        "grouped",
        "display",
        "m",
        "p",
        "size",
        "font",
        "color",
        "justify",
        "align",
        "gap",
        "border",
        "col"
    ]
}
